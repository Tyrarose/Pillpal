<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        style="@style/groupStylewhite_A700">

        <FrameLayout
            android:id="@+id/frameStackcar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_30pxh">
            <View
                android:id="@+id/__link_drug_interaction_empty__pillpal_logo"
                android:layout_width="56dp"
                android:layout_height="30dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="22dp"
                android:background="@drawable/pillpal_logo"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameStackgroup"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_33pxh"
            android:layout_marginStart="@dimen/_33pxh"
            android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/linearNewmedicine"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView
                    android:gravity="top|center"
                    android:id="@+id/txtSetReminder"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_8pxh"
                    android:singleLine="true"
                    android:text="Set Reminder"
                    style="@style/txtPoppinsbold15"
                    android:textColor="@color/Black"/>

                <ImageView
                    android:id="@+id/imageMedsReminderI"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_130pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="@dimen/_130pxh"
                    android:scaleType="centerCrop"
                    android:background="@drawable/img_medsreminderi"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_medsreminderi"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageArrowleft"
                android:layout_width="30dp"
                android:layout_height="@dimen/_30pxh"
                android:layout_gravity="top|start"
                android:layout_marginTop="@dimen/_5pxv"
                android:layout_marginEnd="@dimen/_14pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_arrowleft" />

            <ImageButton
                android:background="@drawable/rectangle_bg_black_900_0c_radius_15"
                android:id="@+id/btnNotification"
                android:layout_gravity="top|end"
                android:layout_height="@dimen/_40pxh"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="@dimen/_40pxh"
                android:paddingHorizontal="@dimen/_9pxh"
                android:paddingVertical="@dimen/_9pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_notification"
                tools:ignore="ContentDescription"/>
        </FrameLayout>

        <LinearLayout
            android:gravity="start"
            android:id="@+id/linearColumnmedicinename"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/groupStylegreen_1">

            <TextView
                android:id="@+id/txtMedicineName"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_27pxh"
                android:layout_marginStart="@dimen/_27pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:singleLine="true"
                style="@style/txtRobotoromanbold13_1"
                android:text="Medicine Name"
                android:textColor="@color/Black"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:gravity="start"
                android:id="@+id/linearRowcut"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_27pxh"
                android:layout_marginStart="@dimen/_27pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <ImageView android:id="@+id/imageCut"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginStart="@dimen/_3pxv"
                    android:layout_gravity="start|center"
                    android:layout_width="@dimen/_16pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_cut"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_cut"/>
                <EditText
                    android:id="@+id/medicineName"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13pxh"
                    android:layout_weight="0.86"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_10pxh"
                    android:singleLine="true"
                   android:hint="Enter the Medicine Name"
                    style="@style/txtPoppinsbold19"
                    android:textColor="@color/Black"
                    android:scaleType="fitXY"
                    android:inputType="textCapSentences"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/txtMedicineType"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_25pxh"
                android:layout_marginStart="@dimen/_25pxh"
                android:layout_marginTop="@dimen/_23pxv"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:singleLine="true"
                style="@style/txtRobotoromanbold13_1"
                android:text="Medicine Type"
                android:textColor="@color/Black"
                android:scaleType="fitXY"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:gravity="end"
                    android:id="@+id/linearMedicineTypeI"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageCapsuleImage"
                        android:layout_height="@dimen/_63pxh"
                        android:layout_width="@dimen/_63pxh"
                        android:scaleType="fitXY"
                        android:background="@drawable/img_image16"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_image16"/>
                    <ImageView
                        android:id="@+id/imageTabletImage"
                        android:layout_height="@dimen/_63pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_width="@dimen/_63pxh"
                        android:scaleType="fitXY"
                        android:background="@drawable/img_tabletimage"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_tabletimage"/>
                    <ImageView android:id="@+id/imageGelImage"
                        android:layout_height="@dimen/_63pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_width="@dimen/_63pxh"
                        android:scaleType="fitXY"
                        android:background="@drawable/img_gelimage"/>
                    <ImageView
                        android:id="@+id/imageSyringeImage"
                        android:layout_height="@dimen/_63pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_width="@dimen/_63pxh"
                        android:scaleType="fitXY"
                        android:background="@drawable/img_syringeimage"/>

                    <ImageView
                        android:id="@+id/imageSyringeImageOne"
                        android:layout_width="@dimen/_63pxh"
                        android:layout_height="@dimen/_63pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:background="@drawable/img_syringeimage_63x63"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_syringeimage_63x63" />

                    <ImageView android:id="@+id/imageUser"
                        android:layout_height="@dimen/_63pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_width="@dimen/_63pxh"
                        android:scaleType="fitXY"
                        android:background="@drawable/img_user_white_a700"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_user_white_a700"/>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/linearTimeSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_32pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearColumntimeschedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.89"
                    android:gravity="start"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtTimeSchedule"
                        style="@style/txtRobotoromanbold13_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:scaleType="fitXY"
                        android:text="Time &amp; Schedule"
                        android:textColor="@color/Black" />

                    <RelativeLayout
                        android:id="@+id/linearRowtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_1pxh"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_12pxv">

                        <ImageView
                            android:id="@+id/imagePlus"
                            android:layout_width="@dimen/_30pxh"
                            android:layout_height="@dimen/_30pxh"
                            android:layout_marginStart="10dp"
                            android:layout_alignParentEnd="true"

                            android:scaleType="fitXY"
                            android:src="@drawable/img_plus_green_200"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_plus_green_200"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/imagePlus"
                            android:scrollbars="vertical"/>

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/linearRowduration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxh"
                android:layout_marginEnd="@dimen/_24pxh"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/linearDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5pxv"
                    android:gravity="start"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtDuration"
                        style="@style/txtRobotoromanbold13_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:scaleType="fitXY"
                        android:singleLine="true"
                        android:text="Duration"
                        android:layout_marginBottom="30dp"
                        android:textColor="@color/Black" />
                    <View
                        android:id="@+id/medDuration"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|start"
                        android:background="@drawable/img_calendar_green_200" />
                    <!--Spinner
                        android:id="@+id/spinnerDurationOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        tools:listitem="@layout/spinner_item" /-->
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/linearDosage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5pxv"
                    android:gravity="start"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtDosage"
                        style="@style/txtRobotoromanbold13_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:scaleType="fitXY"
                        android:singleLine="true"
                        android:text="Dosage"
                        android:layout_marginBottom="30dp"
                        android:textColor="@color/Black" />
                    <View
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|start"
                        android:background="@drawable/vector__1_" />
                    <!-- Spinner
                        android:id="@+id/spinnerDosageOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        tools:listitem="@layout/spinner_item" /-->
                </FrameLayout>
            </LinearLayout>

            <View
                android:background="@color/bluegray_800_2d"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_1pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="@dimen/_308pxh"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="@dimen/_278pxh"
                android:layout_height="@dimen/_44pxv"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_39pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginBottom="@dimen/_20pxv"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_10pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_10pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAllCaps="false"
                android:text="SAVE"
                android:textColor="@color/White"
                style="@style/groupStylegreen_200cornerRadius" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>