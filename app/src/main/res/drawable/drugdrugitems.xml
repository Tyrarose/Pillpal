<!-- res/drawable/button_with_icon_and_margin.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape (e.g., rounded rectangle) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Set your desired background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners (optional) -->
        </shape>
    </item>
    <!-- Icon drawable on the right with margin -->
    <item android:drawableRight="@drawable/img_minuscircle"
        android:layout_marginLeft="15dp" />
</layer-list>